<section id="app">
  <h1 class="title">{{ message }}</h1>

  <div class="flex-container">
    <section class="genre-lists" v-for="(movie_list, movie_cat) in movies">
      <div class="genre-item" v-if="movie_list.length > 0">
        <h6 class="genre-name">${ movie_cat }</h6>
        <div class="movie-list">
          <div class="movie-item" v-for="movie in movie_list">
            <a :href="'/movies/' + movie.movies_id">
            <img class="movie-thumb" :src="'images/' + movie.movies_cover" :alt="movie.movies_title">
          </a>
          </div>
        </div>
      </div>
    </section>
  </div>
